{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "env": {
    "browser": false,
    "es2021": true
  },
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "type": "module",
  "plugins": ["prettier", "only-warn"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}

